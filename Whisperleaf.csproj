<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
      <Folder Include="Utilities\" />
    </ItemGroup>
    
    <ItemGroup>
        <None Include="Graphics\Shaders\**\*.vert" CopyToOutputDirectory="PreserveNewest"/>
        <None Include="Graphics\Shaders\**\*.frag" CopyToOutputDirectory="PreserveNewest"/>
        <None Include="Graphics\Shaders\**\*.comp" CopyToOutputDirectory="PreserveNewest"/>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Veldrid" Version="4.9.0" />
      <PackageReference Include="Veldrid.ImageSharp" Version="4.9.0" />
      <PackageReference Include="Veldrid.MetalBindings" Version="4.9.0" />
      <PackageReference Include="Veldrid.OpenGLBindings" Version="4.9.0" />
      <PackageReference Include="Veldrid.SDL2" Version="4.9.0" />
      <PackageReference Include="Veldrid.SPIRV" Version="1.0.15" />
      <PackageReference Include="Veldrid.StartupUtilities" Version="4.9.0" />
    </ItemGroup>

</Project>
